<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        tools:context=".RedMaps" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/viewHospitalsRed"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:fontFamily="@font/raleway"
            android:onClick="showHospitals"
            android:text="View hospitals"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp">

        </Button>

        <Button
            android:id="@+id/viewPoliceStationsRed"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:fontFamily="@font/raleway"
            android:onClick="showPoliceStations"
            android:text="View police stations"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp">

        </Button>

        <Button
            android:id="@+id/viewSafePlacesRed"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:fontFamily="@font/raleway"
            android:onClick="showPoliceStations"
            android:text="View safespots"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp">

        </Button>

    </LinearLayout>

</LinearLayout>